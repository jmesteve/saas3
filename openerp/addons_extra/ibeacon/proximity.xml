<?xml version="1.0"?>
<openerp>
    <data>
   
   		<record id="view_ibeacon_proximity_tree" model="ir.ui.view">
            <field name="name">ibeacon.proximity.tree</field>
            <field name="model">beacon.proximity.bounds</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="ibeacon_proximity_tree" create="false" delete="false" edit="false">
                	<field name="min_near"/>
					<field name="max_near"/>
                </tree>
            </field>
        </record>
   
   		<record id="view_ibeacon_proximity_form" model="ir.ui.view">
            <field name="name">ibeacon.proximity.form</field>
            <field name="model">beacon.proximity.bounds</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="beacon_proximity_bounds" create="false" delete="false" edit="false">
                	<group>
						<field name="min_near"/>
						<field name="max_near"/>
					</group>
                </form>
            </field>
        </record>
   
    	<record model='ir.actions.act_window' id='action_menu_ibeacon_proximity'>
            <field name="name">Proximity Boundaries</field>
            <field name="res_model">beacon.proximity.bounds</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
   		<menuitem id="menu_ibeacon_proximity" name="Proximity" parent="menu_ibeacon_data" action='action_menu_ibeacon_proximity'  groups="group_ibeacon_access"/>	
    </data>
</openerp>